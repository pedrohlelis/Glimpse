@model List<Role>
@{

int? projectId = ViewData["projectId"] as int?;

<a asp-area="" asp-controller="Role" asp-action="Create" asp-route-projectId="@projectId">+ Criar cargo</a> <br>
/*<a asp-area="" asp-controller="Role" asp-action="UserRoles" asp-route-projectId="@projectId">- Ver Atribuições</a>*/
<br>
<br>
<h3>Cargos </h3>

if(Model.Count == 0) {
    <p>Este projeto ainda não tem cargos</p>
} else {
    foreach(Role role in Model)
    {
        <p>@role.Name - 
            <a asp-area="" asp-controller="Role" asp-action="Assign" asp-route-projectId="@projectId" asp-route-roleId="@role.Id">Atribuir</a> - 
            <a asp-area="" asp-controller="Role" asp-action="Edit" asp-route-projectId="@projectId" asp-route-roleId="@role.Id">Editar</a>
        </p>
    }
}
}


    

    

    