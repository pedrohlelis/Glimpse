@model Role
@{
    int? projectId = ViewData["projectId"] as int?;
}

<form asp-action="EditRole" method="post" enctype="multipart/form-data">
    <div class="form-group">

        <label asp-for="Name">Titulo do Cargo:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>

        <label asp-for="Description">Descrição do Cargo:</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>

        <label asp-for="Color">Cor de Exibição:</label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>

        <input type="hidden" asp-for="Id" name="Id" class="form-control"></input>
        <input type="hidden" id="projectId" name="projectId" class="form-control" value="@projectId"></input>
        
    </div>
    
    <!-- Add other fields as needed -->

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>