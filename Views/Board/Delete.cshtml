@model Board
@{
    ViewData["Title"] = "Criar Quadro";
    int? projectId = ViewData["projectId"] as int?;
}

<script>
    function validateForm() {
        var fileInput = document.getElementById('boardImg');
        var BackgroundImage = document.getElementById('BackgroundImage');
        var file = fileInput.files[0];
        if (!file) {
            BackgroundImage.setAttribute("value", "../default-images/defaultBackground.jpg")
            return true;
        }
        return true;
    }
</script>

<section>
    <form asp-action="EditBoard" asp-controller="Board" method="post" enctype="multipart/form-data" onsubmit="return validateForm()">
        <div class="row">
            <div class="col-lg-12">
                <h1>Editar quadro</h1>
                <input type="hidden" asp-for="Id">
                <input type="hidden" asp-for="Name">
                <input type="hidden" asp-for="Background">
                <input type="hidden" asp-for="CreationDate">
                <input type="hidden" asp-for="IsActive">
                <input type="hidden" asp-for="CreatorId">

                <div class="card-footer">
                    <center>
                        <button type="submit" class="btn-primary">Deletar quadro</button>
                        <button class="btn-secondary"><a asp-action="GetProjectBoards" asp-route-id='@ViewData["projectId"]' asp-controller="Board">Cancelar</a></button>
                    </center>
                </div>
            </div>
        </div>
    </form>
</section>