@using Glimpse.ViewModels;
@model ProfileVM;

<div class="container">
    <div class="main-body bg-dark">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card bg-dark ">
                    <div class="card-body bg-dark">
                        <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                            <img class="rounded-circle mt-5" width="300px" height="300px" src='@(Model.PicturePath ?? Url.Content("~/default-images/default-avatar.jpg"))' alt="">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8 align-content-center">
                <div class="card mb-3 bg-dark">
                    <br>
                    <div class="card-body d-flex flex-column gap-3">
                        <div class="row d-flex">
                            <div class="col">
                                <h1 class="mb-0">Dados Pessoais</h1>
                                <br>
                            </div>
                        </div>
                        <div class="row d-flex">
                            <div class="col-sm-4">
                                <h3 class="mb-0">Primeiro Nome</h3>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <h5>@Model.FirstName</h5>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-4">
                                <h3 class="mb-0">Sobrenome</h3>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <h5>@Model.LastName</h5>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-4">
                                <h3 class="mb-0">Email</h3>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <h5>@Model.Email</h5>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn button-create text-white align-content-center" style="background-color: rgb(109, 19, 255);" asp-action="ProfileEdit" asp-controller="User">Editar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>