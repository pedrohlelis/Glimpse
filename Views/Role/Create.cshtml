@model Role
@{
    int? projectId = ViewData["projectId"] as int?;
}

<form asp-action="CreateRole" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Titulo do Cargo:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>

        <label asp-for="Description">Descrição do Cargo:</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>

        <label asp-for="Color">Cor de Exibição:</label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>

        <!-- Permissions -->
        <div class="mb-3">
            <label class="form-label text-light">Permissions</label>
            <div class="form-check">
                <input asp-for="CanManageMembers" class="form-check-input" type="checkbox" id="canManageMembers" name="canRemoveMember">
                <label class="form-check-label text-light" for="canRemoveMember">
                    Can Manage Members
                </label>
            </div>
            <div class="form-check">
                <input asp-for="CanManageCards" class="form-check-input" type="checkbox" id="canManageCards" name="canManageCards">
                <label class="form-check-label text-light" for="canManageCards">
                    Can Manage Cards
                </label>
            </div>
            <div class="form-check">
                <input asp-for="CanManageTags" class="form-check-input" type="checkbox" id="canManageTags" name="canManageTags">
                <label class="form-check-label text-light" for="canManageTags">
                    Can Manage Tags
                </label>
            </div>
            <div class="form-check">
                <input asp-for="CanManageChecklist" class="form-check-input" type="checkbox" id="canManageChecklist" name="canManageChecklist">
                <label class="form-check-label text-light" for="canManageChecklist">
                    Can Manage Checklist
                </label>
            </div>
        </div>

        <input type="hidden" id="projectId" name="projectId" class="form-control" value="@projectId"></input>
        
    </div>
    
    <!-- Add other fields as needed -->

    <button type="submit" class="btn btn-primary">Criar cargo</button>
</form>