@model Project
@{
    ViewData["Title"] = "Criar Projeto";
}

<section>
    <br><br>
    <form asp-action="EditProject" asp-controller="Project" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-lg-12">

                <input asp-for="Id" type="hidden"/>
                <input asp-for="ResponsibleUserId" type="hidden"/>
                <input asp-for="Picture" type="hidden"/>
                <input asp-for="IsActive" type="hidden"/>
                <input asp-for="CreationDate" type="hidden"/>

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control" required/>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" type="text" class="form-control" required/>
                </div>

                <div class="form-group">
                    <label for="projectImg"></label>
                    <input id="projectImg" name="projectImg" type="file" accept="image/png, image/jpeg, image/jpg" class="form-control"/>
                </div>

                <div class="form-group">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>

                <div class="card-footer">
                    <center>
                        <button type="submit" class="btn-primary">Editar</button>
                        <button class="btn-secondary"><a asp-action="MainProjects" asp-controller="Project">Cancelar</a></button>
                    </center>
                </div>
            </div>
        </div>
    </form>
</section>