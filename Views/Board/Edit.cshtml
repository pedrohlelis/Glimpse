@model Board
@{
    ViewData["Title"] = "Criar Quadro";
    int? projectId = ViewData["projectId"] as int?;
}

<section>
    <br><br>
    <form asp-action="EditBoard" asp-controller="Board" asp-route-boardId='@Model.Id' method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-12">
            <h1>Editar quadro</h1>
            <input type="hidden" asp-for="Id">
            <input type="hidden" asp-for="CreatedAt">
            <input type="hidden" asp-for="CreatorId">
            <div class="form-group">
                <label>Nome do quadro:</label>
                <input asp-for="Name" type="text" name="name" class="form-control" required/>
            </div>

            <div class="form-group">
                <label for="boardImg">Imagem de fundo:</label>
                <input id="boardImg" name="boardImg" type="file" accept="image/png, image/jpeg, image/jpg" class="form-control"/>
                <small class="text-muted">Selecione uma imagem (PNG, JPEG, JPG) para a imagem de fundo.</small>
            </div>

            <div class="form-group">
                <input name="projectId" value='@projectId' type="hidden" class="form-control"/>
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

                <div class="form-group">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>

                <div class="card-footer">
                    <center>
                        <button type="submit" class="btn-primary">Editar Quadro</button>
                        <button class="btn-secondary"><a asp-action="GetBoardInfo" asp-route-id='@Model.Id' asp-controller="Board">Cancelar</a></button>
                    </center>
                </div>
            </div>
        </div>
    </div>
</form>
</section>