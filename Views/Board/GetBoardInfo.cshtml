                                style="background-color: #1E1E1E; border-radius: 13px; cursor: pointer;"
                                data-id="@card.Id"
                                data-name="@card.Name"
                                data-description="@card.Description"
                                data-date="@card.Date">
                                <a class="text-white px-4 card-link" style="text-decoration: none; cursor: pointer;">@card.Name</a>
                            </div>
